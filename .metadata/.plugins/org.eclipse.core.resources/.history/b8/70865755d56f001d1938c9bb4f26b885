import java.util.Scanner;

public class D2B {
	static void decimalToBinary(int n) {
		String b="";
		
		while(n>=1) {
			int x=n%2;
			n=n/2;
			b=x+b;
		}
		System.out.println(b);
	}
 public static void main(String[] args) {
	 Scanner scan=new Scanner(System.in);
		int n=scan.nextInt();
		decimalToBinary(n);
}
}
